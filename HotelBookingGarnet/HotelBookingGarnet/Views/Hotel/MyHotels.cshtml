@model List<Hotel>

<br />
<div class="card">
    <div class="card-header">
        <h4>@localizer["My Hotels"]</h4>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th>@localizer["Hotel name"]</th>
                <th>@localizer["Description"]</th>
                <th>@localizer["Price/Night"]</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @foreach (var hotel in Model)
        {
            <tbody>
                <tr>
                    @if (hotel.Uri == null)
                    {
                        <td>
                            <img src="/images/defaultpic.png" class="thumb" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <img src="@hotel.Uri" class="thumb" />
                        </td>
                    }
                    <td>@hotel.HotelName</td>
                    <td>@hotel.City</td>
                    <td>@hotel.Price</td>
                    <td>
                        <form asp-controller="Hotel" asp-action="HotelInfo" asp-route-HotelId="@hotel.HotelId" method="get">
                            <button type="submit" class="btn btn-outline-dark btn-sm">@localizer["More Info"]</button>
                        </form>
                    </td>
                    <td>
                        <form asp-controller="Reservation" asp-action="HotelReservation" asp-route-HotelId="@hotel.HotelId" method="get">
                            <button type="submit" class="btn btn-outline-warning btn-sm">@localizer["See upcoming reservations"]</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>