@using HotelBookingGarnet.Models
@using Microsoft.AspNetCore.Identity
@model HotelBookingGarnet.ViewModels.LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = @localizer["Log in"];
}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="card col-md-6">
            <h2 class="title">@ViewData["Title"]</h2>
            <br />
            <section>
                <form asp-controller="Login" asp-action="Login" method="post">
                    <h4 class="title">@localizer["Use a local account to log in."]</h4>
                    @if (Model.ErrorMessages != null)
                    {
                        @foreach (var error in Model.ErrorMessages)
                        {
                            <span class="text-danger">@localizer[@error]</span>
                        }
                    }
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="md-form">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="md-form">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="md-form">
                        <button type="submit" class="btn btn-sm btn-outline-indigo">@localizer["Log in"]</button>
                    </div>
                    <div class="md-form">
                        <p>
                            <a asp-action="Register" asp-controller="Register" class="btn btn-sm btn-outline-indigo">@localizer["Register as a new user?"]</a>
                        </p>
                    </div>
                    <div class="md-form">
                        <p>
                            <a asp-action="ForgotPassword" asp-controller="AppUser">@localizer["Forgot your password?"]</a>
                        </p>
                    </div>
                </form>
                <div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center">
                    <span style="font-size: 20px; background-color: white; padding: 0 10px;">
                        OR
                    </span>
                </div>
                <div class="google-btn">
                    <a class="btn btn-sm btn-danger" asp-controller="Login" asp-action="GoogleLogin">
                        <i class="fab fa-google"></i> @localizer["Login with Google"]
                    </a>
                </div>
                <div class="face-btn">
                    <a class="btn btn-sm btn-primary" asp-controller="Login" asp-action="FacebookLogin">
                        <i class="fab fa-facebook"></i> @localizer["Login with Facebook"]
                    </a>
                </div>
            </section>
        </div>
        <div class="col-md-3"></div>
    </div>