@model Reservation
<br/>
<div class="row">
<div class="col-md-3"></div>
    <div class="card col-md-6">
        <div><br/></div>
        <h4 class="my-title">@localizer["Reservation"] #@Model.ReservationId</h4>
        <div class="card-body">
            <div class="table table-borderless">
                <div>
                    <span class="card-title">@localizer["Start date:"] </span>
                    <span class="card-text">@Model.ReservationStart.ToString("yyyy/MM/dd")</span>
                </div>
                <div>
                    <span class="card-title">@localizer["End date:"] </span>
                    <span class="card-text">@Model.ReservationEnd.ToString("yyyy/MM/dd")</span>
                </div>
                <div>
                    <span class="card-title">@localizer["Total price (HUF):"] </span>
                    <span class="card-text">@Model.TotalPrice</span>
                </div>
            </div>
        </div>
        <form asp-controller="Reservation" asp-action="MyReservation" method="get" class="my-btn">
            <button type="submit" class="btn btn-outline-success waves-effect btn-sm">@localizer["Confirm Reservation"]</button>
        </form>

        <form asp-controller="Reservation" asp-action="CancelReservation" asp-route-ReservationId="@Model.ReservationId" method="post" class="my-btn">
            <button type="submit" class="btn btn-outline-danger waves-effect btn-sm">@localizer["Cancel"]</button>
        </form>
        <div><br/></div>
    </div>
<div class="col-md-3"></div>
</div>